<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nea_Phone.MainPage">

    <StackLayout>
        <Ellipse x:Name="connectBtn" 
                       Fill ="Red"
                       WidthRequest="100" 
                       HeightRequest="100" 
                 >

            
        </Ellipse>
        <Label x:Name="connectTxt" TextColor="Black" Text="Not connected!">

        </Label>
        <Frame BorderColor="Red"
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand"
               >

            


            <Rectangle x:Name ="theMouse" Fill="DarkBlue"
                WidthRequest="300"
                HeightRequest="400"
                HorizontalOptions="CenterAndExpand"
                >
                
            </Rectangle>


        </Frame>

    </StackLayout>

</ContentPage>
